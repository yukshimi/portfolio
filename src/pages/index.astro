---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/astro/Header.astro";
import Hero from "../components/astro/Hero.astro";
import WorkGrid from "../components/astro/WorkGrid.astro";
import About from "../components/astro/About.astro";
import Footer from "../components/astro/Footer.astro";
import { getAllWorks } from "../data/works";
import { profile } from "../data/profile";

const works = await getAllWorks();
const metaDescription = profile.bio.trim().slice(0, 160);
---

<BaseLayout title="Yuki Shimizu â€” Portfolio" description={metaDescription}>
  <Header />
  <main id="main">
    <Hero
      title="Yuki Shimizu's Portfolio"
      description="I'm a UI/UX Designer who loves to create functional user experiences."
    />
    <WorkGrid works={works} />
    <About profile={profile} />
  </main>
  <Footer profile={profile} />
</BaseLayout>
