---
import MobileMenu from "../react/MobileMenu";
import Button from "./Button.astro";
---

<header
  class="bg-shade-light backdrop-blur-[1rem] py-[calc(var(--thin-gap)/2)] sticky top-0 z-[2] max-[800px]:py-[calc(var(--thin-gap)*2)]"
>
  <div
    class="flex items-center justify-between w-[80vw] max-w-[1400px] mx-auto max-[800px]:w-[80vw]"
  >
    <a href="/">
      <img
        id="logo"
        src="/img/main_logo.svg"
        alt="Yuki Shimizu"
        class="block"
      />
    </a>
    <MobileMenu client:load>
      <ul
        class="m-0 max-[800px]:absolute max-[800px]:w-screen max-[800px]:m-0 max-[800px]:top-[calc(calc(var(--thin-gap)*2)+calc(var(--thin-gap)*2)+20px)] max-[800px]:right-0 max-[800px]:flex-col max-[800px]:h-0 max-[800px]:transition-all max-[800px]:duration-[400ms] max-[800px]:z-[1000] max-[800px]:invisible max-[800px]:overflow-y-hidden max-[800px]:bg-white group-[.active]:max-[800px]:flex group-[.active]:max-[800px]:h-screen group-[.active]:max-[800px]:visible group-[.active]:max-[800px]:justify-between"
      >
        <li
          class="flex flex-row items-center gap-[calc(var(--thin-gap)/2)] max-[800px]:flex-col max-[800px]:justify-between max-[800px]:items-start max-[800px]:gap-item-gap max-[800px]:py-section-gap"
        >
          <Button href="#about" variant="transparent" isMobileMenu={true}
            >About</Button
          >
          <Button href="#work" variant="transparent" isMobileMenu={true}
            >Work</Button
          >
          <Button href="#about" variant="primary" isMobileMenu={true}
            >Get in touch</Button
          >
        </li>
      </ul>
    </MobileMenu>
  </div>
</header>
